<%- partial('partials/examples/sidebar', {site: site, page: page}) %>

<div class="content content--index home-content">
  <div class="home-center">
    <iframe
      id="exampleIframe" class="example__iframe"
      width="100%" height="100%"
      src="https://exokit.org/"
      allowfullscreen="yes" allowvr="yes" scrolling="no"></iframe>
  </div>

  <div id="homeContent" class="copy__wrap">
    <ul class="menu">
      <li class="menu-item">
        <a href="<%- url_for('docs/introduction') %>">Docs</a>
      </li>
      <li class="menu-item">
        <a href="<%- url_for('faq/') %>">FAQ</a>
      </li>
      <li class="menu-item">
        <a href="<%- url_for('community/') %>">Community</a>
      </li>
      <li class="menu-item">
        <a href="<%- url_for('showcase/') %>">Showcase</a>
      </li>
      <li class="menu-item">
        <a href="https://github.com/exokitxr/exokit">GitHub</a>
      </li>
    </ul>

    <%- page.content %>

    <a href="<%- url_for('docs/' + 'introduction/') %>"
       class="get-started nav-link">
      Get Started
    </a>
    <a href="https://get.exokit.org/"
       class="get-started nav-link">
      Download
    </a>

    <div id="usersContainer">
      <p>Used by</p>
      <ul id="users">
        <% site.data.showcase.users.forEach(function (user, idx) { %>
          <li class="user">
            <a href="<%- user.url %>" title="<%- user.description %>">
              <img src="/images/users/<%- user.company.toLowerCase().replace(/\s/g, '') %>.svg">
            </a>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
</div>
